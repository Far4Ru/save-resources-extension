{
  "manifest_version": 3,
  "name": "Sourcemap Saver",
  "version": "1.0",
  "description": "Automatically saves all sourcemap files with original directory structure",
  "permissions": ["downloads", "debugger"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Save Sourcemaps"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
